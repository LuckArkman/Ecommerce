@model ECommerce.Models.DTOs.User.LoginRequest

@{
    ViewData["Title"] = "Login - Reflexo Nobre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-100 d-flex justify-content-center align-items-center bg-light">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black"> @* COLUNA DA ESQUERDA (FORMULÁRIO) *@

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: var(--primary-color);"></i>
                    <span class="h1 fw-bold mb-0">Reflexo Nobre</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    @* O formulário agora aponta para a action Login do AccountController *@
                    <form asp-controller="Account" asp-action="Login" method="post" style="width: 23rem;">
                        @Html.AntiForgeryToken() @* FUNDAMENTAL para ValidateAntiForgeryToken *@
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                        <div class="form-floating mb-3">
                            <input asp-for="email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label for="Email" class="form-label">Email address</label> @* for="Email" *@
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label for="Password" class="form-label">Password</label> @* for="Password" *@
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="RememberMe" id="rememberMeCheckbox" value="true" /> @* Checkbox manual, ou use asp-for se o ViewModel tiver RememberMe *@
                            <label class="form-check-label" for="rememberMeCheckbox">Lembrar-me?</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button type="submit" class="btn btn-primary btn-lg w-100">LOGIN</button>
                        </div>

                        <div class="mt-3 text-center">
                            <p class="small mb-2"><a asp-controller="Account" asp-action="ForgotPassword" class="text-primary">Forgot password?</a></p>
                            <p class="mb-0">Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary">Register here</a></p>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block"> @* COLUNA DA DIREITA (IMAGEM) *@
                <img src="https://www.paulomauro.com.br/wp-content/uploads/2023/02/paulomauro-blog-capa-como-economizar-em-moveis-planejados.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> @* ESSENCIAL para validação do lado do cliente *@
}