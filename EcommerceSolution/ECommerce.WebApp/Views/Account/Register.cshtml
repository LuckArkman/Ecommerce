@model RegisterViewModel

@{
    ViewData["Title"] = "Registrar - Reflexo Nobre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-100 d-flex justify-content-center align-items-center bg-light">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: var(--primary-color);"></i>
                    <span class="h1 fw-bold mb-0">Reflexo Nobre</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form id="registerForm" method="post" asp-controller="Account" asp-action="Register" style="width: 23rem;">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Criar Nova Conta</h3>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label for="Email" class="form-label">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label for="Password" class="form-label">Senha</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                            <label for="ConfirmPassword" class="form-label">Confirmar Senha</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="pt-1 mb-4">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100">Registrar</button>
                        </div>

                        <div class="mt-3 text-center">
                            <p>Já tem uma conta? <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Faça login aqui</a></p>
                        </div>

                        @if ((Model.ExternalLogins?.Any() ?? false))
                        {
                            <hr class="my-4" />
                            <h5 class="text-center mb-3">Ou registre-se com:</h5>
                            <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal text-center">
                                <div>
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-secondary me-2 mb-2" name="provider" value="@provider.DisplayName" title="Register using your @provider.DisplayName account">
                                            @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        }
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/images/WhatsApp Image 2025-08-15 at 11.50.16.jpeg"
                     alt="Register image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}