@model ECommerce.WebApp.Models.ProductAddViewModel
@{
    ViewData["Title"] = "Adicionar Produto";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Formulário de Adição de Produto</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-controller="Admin" asp-action="ProductAdd" method="post" enctype="multipart/form-data"> @* enctype para upload de arquivos *@
            @Html.AntiForgeryToken()
            <div class="card-body">
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }
                @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Product.Name">Nome do Produto</label>
                    <input asp-for="Product.Name" class="form-control" placeholder="Digite o nome do produto">
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Description">Descrição</label>
                    <textarea asp-for="Product.Description" class="form-control" rows="3" placeholder="Digite a descrição"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Price">Preço</label>
                    <input asp-for="Product.Price" type="number" step="0.01" class="form-control" placeholder="0.00">
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Stock">Estoque</label>
                    <input asp-for="Product.Stock" type="number" class="form-control" placeholder="0">
                    <span asp-validation-for="Product.Stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.CategoryId">Categoria</label>
                    <select asp-for="Product.CategoryId" class="form-control">
                        <option value="">-- Selecione a Categoria --</option>
                        @if (Model.Categories != null)
                        {
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ImageUrl">URL da Imagem</label>
                    <input asp-for="Product.ImageUrl" class="form-control" placeholder="http://exemplo.com/imagem.jpg">
                    <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                    @* Para upload de arquivos, seria InputFile e mais lógica no controller *@
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Adicionar Produto</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Scripts de validação do cliente -->
    <partial name="_ValidationScriptsPartial" />
}