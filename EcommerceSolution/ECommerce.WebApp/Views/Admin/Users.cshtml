@model ECommerce.WebApp.Models.UsersViewModel
@{
    ViewData["Title"] = "Gerenciar Usuários";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Lista de Usuários</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            @if (Model.Users == null || !Model.Users.Any())
            {
                <p class="text-center p-3">Nenhum usuário encontrado.</p>
            }
            else
            {
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Nome Completo</th>
                            <th>Telefone</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.Email</td>
                                <td>@(user.FirstName) @(user.LastName)</td>
                                <td>@(string.IsNullOrEmpty(user.PhoneNumber) ? "N/A" : user.PhoneNumber)</td>
                                <td>
                                    @* Opcional: botões para editar papel, bloquear usuário, etc. *@
                                    <button class="btn btn-secondary btn-sm" disabled>Editar</button>
                                    <button class="btn btn-danger btn-sm" disabled>Excluir</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <!-- /.card-body -->
    </div>
</div>