@model ECommerce.Models.DTOs.Product.CategoryDto
@{
    ViewData["Title"] = "Adicionar Categoria";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Formulário de Adição de Categoria</h3>
        </div>
        <form asp-controller="Admin" asp-action="CategoryAdd" method="post">
            @Html.AntiForgeryToken()
            <div class="card-body">
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">@ViewBag.ErrorMessage</div>
                }
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Name">Nome da Categoria</label>
                    <input asp-for="Name" class="form-control" placeholder="Digite o nome da categoria">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Descrição</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Digite a descrição da categoria"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Adicionar Categoria</button>
                <a asp-controller="Admin" asp-action="CategoryManage" class="btn btn-secondary float-right">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}